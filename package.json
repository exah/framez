{
  "name": "framez",
  "version": "0.1.0-0",
  "description": "Animation engine and utility functions for web",
  "author": "John Grishin <hi@johngrish.in>",
  "license": "MIT",
  "repository": "exah/framez",
  "main": "dist/index.umd.js",
  "module": "lib/index.js",
  "files": [
    "lib",
    "dist"
  ],
  "tags": [
    "animate",
    "animation",
    "requestanimationframe",
    "css"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:es6": "buble --objectAssign Object.assign -n modules -i src -o lib",
    "build:umd": "cross-env NODE_ENV='production' rollup -c",
    "prebuild": "npm run cleanup",
    "watch": "run-p watch:*",
    "watch:es6": "watch 'npm run build:es6' src",
    "watch:umd": "rollup -c -w",
    "prewatch": "npm run cleanup",
    "lint": "eslint src",
    "deploy": "np --any-branch",
    "cleanup": "rimraf dist lib",
    "preversion": "npm run build",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "git add"
    ]
  },
  "devDependencies": {
    "buble": "^0.15.2",
    "cross-env": "5.1.1",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.13.4",
    "lint-staged": "^3.6.1",
    "np": "2.16.1",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.42.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-babili": "^3.1.0",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-watch": "^4.0.0",
    "watch": "^1.0.2"
  }
}
